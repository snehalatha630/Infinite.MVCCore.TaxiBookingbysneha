@model IEnumerable<EmployeeRosterViewModel>
@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-md-9">
        <div class="row">
            <div class="col">
                <h2>List of EmployeeRosters</h2>
            </div>
            <div class="col">
                <a asp-controller="EmployeeRosters" asp-action="Create" class="btn btn-primary">Create new EmployeeRosters</a>
            </div>

        </div>

        <div class="col-md-5">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>RosterId</th>
                        <th>FromDate</th>
                        <th>ToDate</th>
                        <th>InTime</th>
                        <th>OutTime</th>
                        <th>EmployeeId</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Id</td>
                            <td>@x.FromDate.ToShortDateString()</td>
                            <td>@x.ToDate.ToShortDateString()</td>
                            <td>@x.InTime.ToShortTimeString()</td>
                            <td>@x.OutTime.ToShortTimeString()</td>
                            <td>@x.EmployeeId</td>
                            <td>
                                <a asp-controller="EmployeeRosters" asp-action="Details" asp-route-id="@x.Id" class="btn btn-primary">Details</a>
                                <a asp-controller="EmployeeRosters" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-primary">Edit</a>
                                <a asp-controller="EmployeeRosters" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>