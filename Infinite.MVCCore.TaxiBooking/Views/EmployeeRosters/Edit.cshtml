@model EmployeeRosterViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit EmployeeRosters</h1>

<form asp-controller="EmployeeRosters" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-2">
                <label asp-for="FromDate" class="form-label"></label>
                <input type="date" asp-for="FromDate" class="form-control" />
                <span asp-validation-for="FromDate"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ToDate" class="form-label"></label>
                <input type="date" asp-for="ToDate" class="form-control" />
                <span asp-validation-for="ToDate"></span>
            </div>
            <div class="mb-2">
                <label asp-for="InTime" class="form-label"></label>
                <input type="time" asp-for="InTime" class="form-control" />
                <span asp-validation-for="InTime"></span>
            </div>
            <div class="mb-2">
                <label asp-for="OutTime" class="form-label"></label>
                <input type="time" asp-for="OutTime" class="form-control" />
                <span asp-validation-for="OutTime"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Update Customer" />
            </div>
        </div>
    </div>
</form>

